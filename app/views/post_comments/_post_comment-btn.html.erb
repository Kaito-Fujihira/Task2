<table class="table">
  <% book.post_comments.each do |post_comment| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
      	  <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
		      <%= post_comment.user.name %>
		    <% end %>
		  </td>
			<td>
			  <%= post_comment.comment %>
			</td>
        <% if post_comment.user == current_user %>
      <td>
        <%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, remote: true, class: "btn-sm btn-danger" %>
      </td>
        <% end %>
    </tr>
  <% end %>
</table>
<!--コメントは、bookに結びついたpost_commentにあるため、2つ用意する必要がある-->
<%= form_with(model:[book, post_comment], remote: true) do |f| %>
  <%= f.text_area :comment, rows:'5', class: "form-control" %>
  	<%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>