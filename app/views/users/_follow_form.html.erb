<% if current_user != user %> <!--現在ログインしているユーザーのプロフィールは、フォロー、フォロー解除のボタンが出ないようにする。-->
  <div id="follow_form">
  <% if current_user.following?(user) %> <!--ユーザーがフォローしている場合は、フォロー解除ボタンを表示。してない場合は、フォローボタン表示させる。-->
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "btn btn-success" %>
  <% end %>
  </div>
<% end %>
