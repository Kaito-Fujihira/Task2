<% user ||= current_user %>
<div class="stats">
  <%= link_to "follows", followings_user_path(user) %>
    <strong id="followed" class="stat">
      <%= user.followings.count %>
    </strong>
  <br>
  <%= link_to "follower", followers_user_path(user) %>
    <strong id="followers" class="stat">
      <%= user.followers.count %>
    </strong>
</div>