
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/form', book: @book_new %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
							<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, book_path(@book) %></td>
					<td><%= @book.body %></td>
					<td><% if @book.favorited_by?(current_user) %>
					<li style="list-style-type: none">
  						<%= link_to book_favorites_path(@book), method: :delete do %>
 					 	   <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
    					   <%= @book.favorites.count %>
  						<% end %>
					</li>
					<% else %>
					<li style="list-style-type: none">
  						<%= link_to book_favorites_path(@book), method: :post do %>
  					    	<i class="fa fa-heart-o" aria-hidden="true"></i>
  					    	<%= @book.favorites.count %>
 				 	    <% end %>
					</li>
					<% end %>
					</td>
					<td>コメント数 : <%= @book.post_comments.count %></td>
					<td><% if @book.user == current_user %>
						<%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %>
						<% end %>
					</td>
				</tr>
			</table>
			<% @book.post_comments.each do |post_comment| %>
				<%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %>
				<%= post_comment.user.name %>
				<%= post_comment.comment %>
          		<% if post_comment.user == current_user %>
            		<div>
              			<%= link_to "Destroy", book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-danger pull-right" %>
            		</div>
         		<% end %>
         	<% end %>
			<%= form_with(model:[@book, @post_comment], local: true) do |f| %>
    			<%= f.text_area :comment, rows:'5', class: "form-control" %>
  				<%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
			<% end %>
	</div>
</div>

